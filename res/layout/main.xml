<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TextView android:text="IP Address" android:id="@+id/label1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_height="wrap_content" android:text="" android:id="@+id/editAddress" android:layout_width="match_parent"></EditText>
    <TextView android:text="Netmask" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_height="wrap_content" android:text="" android:id="@+id/editMask" android:layout_width="match_parent"></EditText>
    <TableLayout android:stretchColumns='1' android:layout_width="match_parent" android:id="@+id/tableLayout1" android:layout_height="match_parent" android:paddingTop="20px">
        <View
        	android:layout_height="1dip"
        	android:background="#FF909090" />
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Network" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:layout_width="wrap_content" android:gravity="right" android:id="@+id/textNetwork" android:layout_height="wrap_content" android:text=""></TextView>
        </TableRow>
        <View
        	android:layout_height="1dip"
        	android:background="#FF909090" />
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Netmask" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:layout_width="wrap_content" android:gravity="right" android:id="@+id/textMask" android:layout_height="wrap_content" android:text=""></TextView>
        </TableRow>
        <View
        	android:layout_height="1dip"
        	android:background="#FF909090" />
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Broadcast" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:layout_width="wrap_content" android:gravity="right" android:id="@+id/textBroadcast" android:layout_height="wrap_content" android:text=""></TextView>
        </TableRow>
        <View
        	android:layout_height="1dip"
        	android:background="#FF909090" />
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Addresses" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:layout_width="wrap_content" android:gravity="right" android:id="@+id/textAddresses" android:layout_height="wrap_content" android:text=""></TextView>
        </TableRow>
        <View
        	android:layout_height="1dip"
        	android:background="#FF909090" />
    </TableLayout>
</LinearLayout>
